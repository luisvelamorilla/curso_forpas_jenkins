
// http://jenkins:8080/pipeline-syntax/globals#params

pipeline {
    
    agent any
    /*
    agent {
        label 'cliente1'
    }
    */
    
    stages {
        stage('Stage init') {
            steps {
                println "Hello from stage init"
            }
        }
    }
    
    post {
        always {
            script {
                // Obtener y mostrar la informaci칩n de los par치metros
                def paramsInfo = params.collect { param ->
                    "${param.key}: ${param.value}"
                }
                
                println "Informaci칩n de los par치metros:"
                println paramsInfo.join('\n')
            }
        }
    }
}